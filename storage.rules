rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow users to upload files to a path corresponding to their user ID
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read for other assets if needed, otherwise deny
    match /{allPaths=**} {
      allow read;
      allow write: if false;
    }
  }
}
