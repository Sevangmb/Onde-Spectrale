
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to everyone for all files
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own DJ message folders
    match /dj-messages/{stationId}/{messageId} {
      allow write: if request.auth != null;
    }
  }
}
