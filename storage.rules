rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Audio files can be read by anyone, but only created by authenticated users (server-side functions).
    // This rule assumes functions will be authenticated when writing.
    match /audio/{stationId}/{messageId}.mp3 {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
