rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files by default
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to a specific folder for their DJ messages
    match /dj-messages/{stationId}/{messageId} {
      allow write: if request.auth != null;
    }
  }
}
