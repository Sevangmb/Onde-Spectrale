
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permettre aux utilisateurs authentifiés de créer des messages audio pour leurs stations
    match /dj-messages/{stationId}/{messageId} {
      allow create: if request.auth != null;
    }

    // Par défaut, refuser toutes les autres opérations de lecture/écriture
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
