# üéõÔ∏è Onde Spectrale - Configuration Environment
# Copiez ce fichier vers .env.local et configurez vos valeurs

# ===============================
# üî• FIREBASE CONFIGURATION
# ===============================
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com  
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin (Server-side)
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxx@your_project.iam.gserviceaccount.com
FIREBASE_ADMIN_PROJECT_ID=your_project_id

# ===============================
# ü§ñ AI SERVICES
# ===============================
# Google AI (Genkit)
GOOGLE_GENAI_API_KEY=your_google_ai_api_key

# OpenAI (si utilis√©)
OPENAI_API_KEY=your_openai_api_key

# ===============================
# üéµ AUDIO SERVICES
# ===============================
# Plex Server (optionnel)
PLEX_SERVER_URL=http://your-plex-server:32400
PLEX_TOKEN=your_plex_token

# Audio Storage
NEXT_PUBLIC_AUDIO_CDN_URL=https://your-cdn.com/audio/

# ===============================
# üì° APPLICATION CONFIGURATION
# ===============================
# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:9002
NEXT_PUBLIC_API_URL=http://localhost:9002/api

# Features flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# ===============================
# üîß DEVELOPMENT TOOLS
# ===============================
# Next.js
NEXT_TELEMETRY_DISABLED=1

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Performance
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true

# ===============================
# üîí SECURITY
# ===============================
# Session
NEXTAUTH_SECRET=your_session_secret_here
NEXTAUTH_URL=http://localhost:9002

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# CORS
CORS_ORIGIN=http://localhost:9002,https://your-domain.com

# ===============================
# üìä MONITORING & ANALYTICS
# ===============================
# Sentry (Error tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ===============================
# üß™ TESTING
# ===============================
# Test database
TEST_DATABASE_URL=your_test_db_url

# E2E Testing
PLAYWRIGHT_BROWSER=chromium
PLAYWRIGHT_HEADLESS=true

# ===============================
# üì¶ BUILD & DEPLOYMENT
# ===============================
# Build optimization
ANALYZE_BUNDLE=false
GENERATE_SOURCEMAP=true

# Deployment
DEPLOY_TARGET=firebase
DEPLOY_BRANCH=main

# CDN
CDN_URL=https://your-cdn.com
ASSET_PREFIX=https://your-cdn.com/assets

# IMPORTANT SECURITY NOTES:
# 1. Never commit .env.local to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Configure Firebase Security Rules properly
# 4. Enable Firebase App Check for production