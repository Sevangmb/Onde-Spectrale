#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ“ Validating commit message..."

# Basic commit message validation
commit_regex='^(feat|fix|docs|style|refactor|test|chore|perf|ci|build|revert)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
  echo "âŒ Invalid commit message format!"
  echo "âœ… Format: type(scope): description"
  echo "   Examples:"
  echo "   â€¢ feat(audio): add playlist shuffle functionality"
  echo "   â€¢ fix(ui): correct button alignment on mobile"
  echo "   â€¢ docs(readme): update installation instructions"
  exit 1
fi

echo "âœ… Commit message format valid!"