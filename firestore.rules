rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // RÈGLES TEMPORAIRES POUR DEBUG - TRÈS PERMISSIVES
    // TODO: Restreindre après résolution du problème
    
    match /stations/{stationId} {
      allow read, write: if true; // Temporairement ouvert
    }

    match /users/{userId} {
      allow read, write: if true; // Temporairement ouvert
      
      match /characters/{charId} {
        allow read, write: if true; // Temporairement ouvert
      }
    }

    // Fallback pour tous les autres documents
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
